{% extends "layout.twig" %}

{% block title %} Registrar usuario {% endblock %}

{% block main_container %}
    <h2>Registrar usuario</h2>
    <form class="form-horizontal" method="post" action="/users/signup">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
                <input id="email" class="form-control" name="email"
                       placeholder="Ejemplo: uo123456@uniovi.es" type="email"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nombre:</label>
            <div class="col-sm-10">
                <input class="form-control" id="name" name="name"
                       placeholder="Ejemplo: Adrián" type="text"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="lastName">Apellidos:</label>
            <div class="col-sm-10">
                <input class="form-control" id="lastName" name="lastName"
                       placeholder="Ejemplo: García Fernández" type="text"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Contraseña:</label>
            <div class="col-sm-10">
                <input id="password" class="form-control" name="password"
                       placeholder="Contraseña" type="password"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="passwordConfirm">Confirmar contraseña:</label>
            <div class="col-sm-10">
                <input class="form-control" id="passwordConfirm" name="passwordConfirm"
                       placeholder="Confirmar contraseña" type="password"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4" for="date">Fecha de nacimiento:</label>
            <div class="col-sm-10">
                <input class="form-control" id="date" name="date"
                       placeholder="Fecha de nacimiento" type="date"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-dark" type="submit">Registrarse</button>
            </div>
        </div>
    </form>
{% endblock %}