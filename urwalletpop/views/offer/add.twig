{% extends 'layout.twig' %}

{% block title %} Añadir Oferta {% endblock %}

{% block main_container %}

    <h2 id="addOffer">Añadir oferta</h2>
    <form action="/offer/add" class="form-horizontal" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="title"> Título</label>
            <div class="col-sm-10">
                <input class="form-control" id="title" name="title" placeholder="Ejemplo: Playeros Nike"
                       type="text"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="description">Descripción</label>
            <div class="col-sm-10">
					<textarea class="form-control" cols="50" id="description" name="description"
                              rows="10"
                              placeholder="Ejemplo: Playeros Nike muy flamas para ir con todo el drip, listos para huir de los cops."></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="price">Precio</label>
            <div class="col-sm-10">
                <input class="form-control" id="price" name="price" step="0.01"
                       type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="feature">Destacar</label>
            <div class="col-sm-10">
                <input class="form-control cb" id="feature" name="feature" type="checkbox"/>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-dark" type="submit">Añadir</button>
                </div>
            </div>
    </form>
{% endblock %}